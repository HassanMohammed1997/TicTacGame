<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:freezesText="true"
        android:layout_marginTop="8dp"
        android:text="@string/player_one_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:freezesText="true"
        android:id="@+id/player_1"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/player_1_tv"
        android:text="@string/zero_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/player_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:layout_below="@id/player_1_tv"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/player_two_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_1_tv"
        android:id="@+id/player_2"
        android:layout_marginStart="8dp"
        android:freezesText="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/player_2_tv"
        android:text="@string/zero_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rest_button"
        android:freezesText="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/rest_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/player_2_tv"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:id="@+id/button_00"
                android:background="@android:color/darker_gray"
                android:freezesText="true"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"

                android:layout_margin="8dp"
                android:freezesText="true"
                android:id="@+id/button_01"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:id="@+id/button_02"
                android:freezesText="true"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"

                android:layout_margin="8dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:freezesText="true"
                android:background="@android:color/darker_gray"

                android:id="@+id/button_10"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:freezesText="true"
                android:id="@+id/button_11"
                android:background="@android:color/darker_gray"

                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:freezesText="true"
                android:background="@android:color/darker_gray"

                android:id="@+id/button_12"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:freezesText="true"
                android:background="@android:color/darker_gray"

                android:id="@+id/button_20"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:freezesText="true"
                android:background="@android:color/darker_gray"

                android:id="@+id/button_21"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:id="@+id/button_22"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray"
                android:freezesText="true"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>